<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.SourceNewsFragment">

    <EditText
        android:hint="search"
        android:id="@+id/searchSource"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@+id/btnSearchSource"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/btnSearchSource"
        android:src="@drawable/ic_search"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/searchSource"
        android:id="@+id/rvSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>